@model ExpenseTracking.Models.Users
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ExpenseFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #10b981, #34d399);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-box {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 400px;
            width: 100%;
            padding: 40px 35px;
        }

        .logo {
            text-align: center;
            color: #10b981;
            margin-bottom: 30px;
        }

            .logo h2 {
                font-size: 1.75rem;
                margin-bottom: 0.5rem;
            }

            .logo p {
                font-size: 0.95rem;
            }

        .form-control {
            padding: 12px;
            border-radius: 10px;
            border: 2px solid #e2e8f0;
            font-size: 0.95rem;
        }

            .form-control:focus {
                border-color: #10b981;
                box-shadow: none;
            }

        .form-label {
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .btn-login {
            background: linear-gradient(135deg, #10b981, #34d399);
            border: none;
            padding: 12px;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            width: 100%;
            font-size: 1rem;
            transition: transform 0.2s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
            }

        .forgot-password-link {
            font-size: 0.9rem;
            color: #10b981;
            text-decoration: none;
        }

            .forgot-password-link:hover {
                text-decoration: underline;
            }

        .toast-container {
            z-index: 9999;
        }

        /* Mobile Responsiveness - Small phones */
        @@media (max-width: 375px) {
            .login-box

        {
            padding: 30px 20px;
            border-radius: 15px;
        }

        .logo h2 {
            font-size: 1.5rem;
        }

        .logo p {
            font-size: 0.85rem;
        }

        .form-control {
            padding: 10px;
            font-size: 0.9rem;
        }

        .form-label {
            font-size: 0.85rem;
        }

        .btn-login {
            padding: 10px;
            font-size: 0.95rem;
        }

        .forgot-password-link {
            font-size: 0.85rem;
        }

        }

        /* Tablet and smaller screens */
        @@media (max-width: 576px) {
            body

        {
            padding: 15px;
        }

        .login-box {
            max-width: 100%;
        }

        .text-end {
            text-align: center !important;
        }

        }

        /* Medium screens */
        @@media (min-width: 577px) and (max-width: 768px) {
            .login-box

        {
            max-width: 450px;
        }

        }

        /* Large screens */
        @@media (min-width: 769px) {
            body

        {
            padding: 30px;
        }

        .login-box {
            padding: 45px 40px;
        }

        }

        /* Extra large screens */
        @@media (min-width: 1200px) {
            .logo h2

        {
            font-size: 2rem;
        }

        .form-control {
            padding: 14px;
        }

        .btn-login {
            padding: 14px;
        }

        }

        /* Landscape mobile orientation */
        @@media (max-height: 600px) and (orientation: landscape) {
            body

        {
            padding: 10px;
        }

        .login-box {
            padding: 20px 30px;
            margin: 10px 0;
        }

        .logo {
            margin-bottom: 15px;
        }

            .logo h2 {
                font-size: 1.4rem;
            }

        .mb-3 {
            margin-bottom: 0.75rem !important;
        }

        }

        /* Ensure toast messages are visible on mobile */
        @@media (max-width: 576px) {
            .toast-container

        {
            left: 50%;
            transform: translateX(-50%);
            right: auto !important;
            padding: 0.75rem !important;
        }

        .toast {
            max-width: 90vw;
        }

        }
    </style>
</head>
<body>
    <div class="toast-container position-fixed top-0 end-0 p-3">
        @if (TempData["Success"] != null)
        {
            <div class="toast align-items-center text-bg-success border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["Success"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast"></button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="toast align-items-center text-bg-danger border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["Error"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast"></button>
                </div>
            </div>
        }
    </div>

    <div class="login-box">
        <div class="logo">
            <h2><i class="bi bi-wallet2"></i> JOSS</h2>
            <p class="text-muted">Welcome Back!</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 text-end">
                <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password-link">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-login">Login</button>
        </form>

        <hr class="my-4">

        <p class="text-center text-muted mb-0">
            Don't have an account?
            <a asp-controller="Account" asp-action="Register"
               class="text-decoration-none fw-bold"
               style="color: #10b981;">Register</a>
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
