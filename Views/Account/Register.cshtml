@model ExpenseTracking.Models.Users

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - ExpenseFlow</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        body {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .register-box {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 400px;
            width: 100%;
            padding: 40px 35px;
        }

        .logo {
            text-align: center;
            color: #3b82f6;
            margin-bottom: 30px;
        }

            .logo h2 {
                font-size: 1.75rem;
                margin-bottom: 0.5rem;
            }

            .logo p {
                font-size: 0.95rem;
            }

        .form-control {
            padding: 12px;
            border-radius: 10px;
            border: 2px solid #e2e8f0;
            font-size: 0.95rem;
        }

            .form-control:focus {
                border-color: #3b82f6;
                box-shadow: none;
            }

        .form-label {
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .btn-register {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
            border: none;
            padding: 12px;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            width: 100%;
            font-size: 1rem;
            transition: transform 0.2s;
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(59, 130, 246, 0.4);
            }

        .toast-container {
            z-index: 9999;
        }

        /* Mobile Responsiveness - Small phones */
        @@media (max-width: 375px) {
            .register-box

        {
            padding: 30px 20px;
            border-radius: 15px;
        }

        .logo h2 {
            font-size: 1.5rem;
        }

        .logo p {
            font-size: 0.85rem;
        }

        .form-control {
            padding: 10px;
            font-size: 0.9rem;
        }

        .form-label {
            font-size: 0.85rem;
        }

        .btn-register {
            padding: 10px;
            font-size: 0.95rem;
        }

        }

        /* Tablet and smaller screens */
        @@media (max-width: 576px) {
            body

        {
            padding: 15px;
        }

        .register-box {
            max-width: 100%;
        }

        }

        /* Medium screens */
        @@media (min-width: 577px) and (max-width: 768px) {
            .register-box

        {
            max-width: 450px;
        }

        }

        /* Large screens */
        @@media (min-width: 769px) {
            body

        {
            padding: 30px;
        }

        .register-box {
            padding: 45px 40px;
        }

        }

        /* Extra large screens */
        @@media (min-width: 1200px) {
            .logo h2

        {
            font-size: 2rem;
        }

        .form-control {
            padding: 14px;
        }

        .btn-register {
            padding: 14px;
        }

        }

        /* Landscape mobile orientation */
        @@media (max-height: 600px) and (orientation: landscape) {
            body

        {
            padding: 10px;
        }

        .register-box {
            padding: 20px 30px;
            margin: 10px 0;
        }

        .logo {
            margin-bottom: 15px;
        }

            .logo h2 {
                font-size: 1.4rem;
            }

        .mb-3 {
            margin-bottom: 0.75rem !important;
        }

        }
    </style>
</head>

<body>
    <div class="toast-container position-fixed top-0 end-0 p-3">

        @if (TempData["Success"] != null)
        {
            <div class="toast align-items-center text-bg-success border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["Success"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast"></button>
                </div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="toast align-items-center text-bg-danger border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["Error"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast"></button>
                </div>
            </div>
        }

    </div>

    <div class="register-box">

        <div class="logo">
            <h2><i class="bi bi-wallet2"></i> JOSS</h2>
            <p class="text-muted">Create Your Account</p>
        </div>

        <form asp-action="Register" method="post">

            <div class="mb-3">
                <label class="form-label fw-bold">Full Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Create password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-register mt-3">Register</button>

        </form>

        <hr class="my-4">

        <p class="text-center text-muted mb-0">
            Already have an account?
            <a asp-controller="Account" asp-action="Login"
               class="text-decoration-none fw-bold"
               style="color: #3b82f6;">Login</a>
        </p>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
